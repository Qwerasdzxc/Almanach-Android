<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp" >

            <TextView
                android:id="@+id/calendar_event_add_new_event_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_gravity="center"
                android:text="Add new calendar event:"
                android:textSize="18sp"
                android:paddingBottom="7dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:layout_marginBottom="2dp">

                <ImageView
                    android:id="@+id/calendar_event_add_test_img"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:clickable="true"
                    android:src="@drawable/ic_test"
                    android:layout_weight="0.2"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>

                <ImageView
                    android:id="@+id/calendar_event_add_homework_img"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:clickable="true"
                    android:src="@drawable/ic_homework"
                    android:layout_weight="0.2"
                    android:layout_marginRight="20dp"/>

                <ImageView
                    android:id="@+id/calendar_event_add_presentation_img"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:clickable="true"
                    android:src="@drawable/ic_presentation"
                    android:layout_weight="0.2"
                    android:layout_marginRight="20dp"/>

                <ImageView
                    android:id="@+id/calendar_event_add_assignment_img"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:clickable="true"
                    android:src="@drawable/ic_other_assignment"
                    android:layout_weight="0.2"
                    android:layout_marginRight="20dp"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>