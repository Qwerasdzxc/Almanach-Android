<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="7dp">

    <LinearLayout
        android:id="@+id/list_item_counter_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/list_item_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1."
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:paddingRight="12dp"
            android:paddingLeft="10dp"/>

        <View
            android:layout_width="2dip"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:visibility="visible"
            android:background="@color/colorViewSeparator"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/subject_profile_cat_item_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:src="@drawable/ic_poll"/>

    <TextView
        android:id="@+id/subject_profile_cat_item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Item type"
        android:layout_gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"/>

</LinearLayout>