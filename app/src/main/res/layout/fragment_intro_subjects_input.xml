<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/fragment_slide_subjects"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingTop="30dp"
              android:paddingLeft="20dp"
              android:paddingRight="20dp"
              android:background="@color/colorPrimary">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subjects "
        android:gravity="top"
        android:paddingBottom="20dp"
        android:textColor="@color/colorWhiteText"
        android:textSize="50sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please enter your school subjects: "
        android:gravity="top"
        android:paddingBottom="25dp"
        android:textColor="@color/colorWhiteText"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/edit_subjects_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:hint="Example:\nMaths\nBiology\nHistory"
        android:inputType="textMultiLine|textCapWords"
        android:minLines="1"
        android:maxLines="20"
        android:scrollbars="vertical"
        android:textColor="@color/colorWhiteText"
        android:textColorHint="@color/colorWhiteTransparentText"/>


</LinearLayout>