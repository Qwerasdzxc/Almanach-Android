<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView android:id="@+id/person_profile_nested_scrollview"
                                            xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            xmlns:tools="http://schemas.android.com/tools"
                                            android:fitsSystemWindows="true"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:clipToPadding="false"
                                            app:layout_behavior="@string/appbar_scrolling_view_behavior"
                                            tools:context="com.code_dream.almanach.school_profile.SchoolProfileActivity"
                                            tools:showIn="@layout/activity_school_profile"
                                            android:orientation="vertical">

    <LinearLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/school_profile_set_school_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_subject_2"
            android:drawablePadding="5dp"
            android:clickable="true"
            android:text="Set as my School"
            android:textSize="14sp"
            android:paddingTop="15dp"
            android:layout_gravity="center"/>

        <include layout="@layout/other_item_divider"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>