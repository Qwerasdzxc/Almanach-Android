<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="4dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/subject_list_subject_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Srpski"
                    android:textSize="22sp"
                    android:layout_weight="0.9"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="["
                    android:textColor="@color/colorLightGrayText"
                    android:textSize="30sp"/>

                <ImageView
                    android:id="@+id/subject_list_grade_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:scaleX="0.85"
                    android:scaleY="0.85"
                    android:src="@drawable/ic_denied"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="]"
                    android:textColor="@color/colorLightGrayText"
                    android:textSize="30sp"/>

            </LinearLayout>

            <include layout="@layout/other_item_divider_small"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp">

                <TextView
                    android:id="@+id/subject_list_num_of_assignments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Assignments"
                    android:textSize="16sp"
                    android:paddingRight="8dp"/>

                <include layout="@layout/other_item_divider_vertical"/>

                <ImageView
                    android:id="@+id/subject_list_assignment_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_test"
                    android:scaleX="0.85"
                    android:scaleY="0.85"
                    android:paddingRight="2dp"
                    android:paddingLeft="10dp"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/subject_list_assignment_homework"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_homework"
                    android:scaleX="0.85"
                    android:scaleY="0.85"
                    android:paddingRight="2dp"
                    android:paddingLeft="10dp"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/subject_list_assignment_presentation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_presentation"
                    android:scaleX="0.85"
                    android:scaleY="0.85"
                    android:paddingRight="2dp"
                    android:paddingLeft="10dp"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/subject_list_assignment_other_assignment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.85"
                    android:scaleY="0.85"
                    android:paddingLeft="10dp"
                    android:src="@drawable/ic_other_assignment"
                    android:visibility="visible"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>