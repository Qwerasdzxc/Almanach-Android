<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="6dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp">

                <TextView
                    android:id="@+id/school_post_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="School name"
                    android:layout_weight="1"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/school_post_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:textSize="11sp"
                    android:text="01.01.2001"/>

                <ImageView
                    android:id="@+id/school_post_context_menu"
                    android:clickable="true"
                    android:layout_width="18dp"
                    android:layout_height="20dp"
                    android:paddingBottom="3dp"
                    android:src="@drawable/ic_context_menu"/>

            </LinearLayout>

            <TextView
                android:id="@+id/school_post_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Person name"
                android:textStyle="bold"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"/>

            <TextView
                android:id="@+id/school_post_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Looooong loooong content text"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"/>

            <ImageView
                android:id="@+id/school_post_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="Post image"
                android:visibility="gone"
                android:adjustViewBounds="true"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="3dp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="@color/colorViewSeparator"
                android:layout_margin="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:paddingBottom="10dp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/school_post_upvote_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:drawableLeft="@drawable/ic_arrow_up"
                    android:drawablePadding="20dp"
                    android:text="Like"
                    android:textSize="15sp"
                    android:clickable="true"
                    android:gravity="left|center_vertical"
                    android:paddingRight="15dp"
                    android:layout_weight="0.5"/>

                <TextView
                    android:id="@+id/school_post_reaction_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="5"/>

                <View
                    android:id="@+id/school_post_reaction_separator"
                    android:layout_width="2dip"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    android:background="@color/colorViewSeparator"/>

                <TextView
                    android:id="@+id/school_post_downvote_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:drawableRight="@drawable/ic_arrow_down"
                    android:drawablePadding="25dp"
                    android:text="Dislike"
                    android:textSize="15sp"
                    android:clickable="true"
                    android:gravity="right|center_vertical"
                    android:paddingLeft="15dp"
                    android:layout_weight="0.5"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
